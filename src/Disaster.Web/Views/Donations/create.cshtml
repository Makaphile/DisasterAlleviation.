@model DisasterAlleviation.Models.Donation
@{
    ViewData["Title"] = "Create Donation";
}
@layout = "_Layout";

<h2>Create Donation</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="DonorName" class="form-label"></label>
        <input asp-for="DonorName" class="form-control" />
        <span asp-validation-for="DonorName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ResourceType" class="form-label"></label>
        <input asp-for="ResourceType" class="form-control" />
        <span asp-validation-for="ResourceType" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateDonated" class="form-label"></label>
        <input asp-for="DateDonated" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

